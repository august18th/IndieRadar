@model IndieRadar.Web.Models.GameCriterias

<!-- Categories Widget -->
<div class="col-md-4">
    <!-- Search Widget -->
    <div class="card my-4">
        <h5 class="card-header">Search</h5>
        <div class="card-body">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                    <button class="btn btn-secondary" type="button">Go!</button>
                </span>
            </div>
        </div>
    </div>
    <div class="card my-4">
        <h5 class="card-header">Genres</h5>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6">
                    <ul class="list-unstyled mb-0">
                        @foreach (var genre in Model.Genres.Take(Model.Genres.Count / 2))
                        {
                            <li>
                                @Html.ActionLink(genre.Name, "FilterByGenre", new { genreName = genre.Name }, new { @class = "nav-link" })
                            </li>
                        }
                    </ul>
                </div>
                <div class="col-lg-6">
                    <ul class="list-unstyled mb-0">
                        @foreach (var genre in Model.Genres.Skip(Model.Genres.Count / 2))
                        {
                            <li>
                                @Html.ActionLink(genre.Name, "FilterByGenre", new { genreName = genre.Name }, new { @class = "nav-link" })
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Side Widget -->
    <div class="card my-4">
        <h5 class="card-header">Platforms</h5>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6">
                    <ul class="list-unstyled mb-0">
                        @foreach (var platform in Model.Platforms.Take(Model.Platforms.Count / 2))
                        {
                            <li>
                                @Html.ActionLink(platform.Name, "FilterByPlatform", new { platformName = platform.Name }, new { @class = "nav-link" })
                            </li>
                        }
                    </ul>
                </div>
                <div class="col-lg-6">
                    <ul class="list-unstyled mb-0">
                        @foreach (var platform in Model.Platforms.Skip(Model.Platforms.Count / 2))
                        {
                            <li>
                                @Html.ActionLink(platform.Name, "FilterByPlatform", new { platformName = platform.Name }, new { @class = "nav-link" })
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>